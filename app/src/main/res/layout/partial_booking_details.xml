<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/hairstyle_image_detail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder_image" />

    <TextView
        android:id="@+id/service_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hairstyle_image_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Butterfly Locs" />

    <TextView
        android:id="@+id/customer_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/service_name_detail"
        app:layout_constraintStart_toStartOf="@id/service_name_detail"
        app:layout_constraintTop_toBottomOf="@id/service_name_detail"
        tools:text="Customer: Sagwadi M." />

    <TextView
        android:id="@+id/stylist_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/service_name_detail"
        app:layout_constraintStart_toStartOf="@id/service_name_detail"
        app:layout_constraintTop_toBottomOf="@id/customer_name_detail"
        tools:text="Stylist: Rinae M." />

    <TextView
        android:id="@+id/booking_time_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/service_name_detail"
        app:layout_constraintStart_toStartOf="@id/service_name_detail"
        app:layout_constraintTop_toBottomOf="@id/stylist_name_detail"
        tools:text="On: 20 Sep, 2025 at 10:00" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cancellation_reason_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/status_red_bg"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/hairstyle_image_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/cancellation_reason_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/status_red"
        android:textSize="14sp"
        tools:text="Reason: Stylist is unavailable at this time." />

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
