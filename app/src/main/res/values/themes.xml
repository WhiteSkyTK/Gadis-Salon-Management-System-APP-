<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GadisSalonManagementSystemAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/backgroundGrey</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="colorSurface">@color/cardBackgroundColor</item>
    </style>

    <!-- Style for a Profile Menu Item -->
    <style name="ProfileOption" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Style for a divider line -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/inputFieldBackgroundColor</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetOption" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Gadis.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/backgroundColor</item> <!-- Gets the background color, which is white/black -->
    </style>

    <!-- ADD THIS STYLE for your secondary, outlined buttons (like "Add to Cart") -->
    <style name="Gadis.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Gadis.Calendar" parent="Theme.AppCompat.Light">
        <!-- This points to our custom text appearance styles below -->
        <item name="mcv_dateTextAppearance">@style/Gadis.Calendar.DateText</item>
        <item name="mcv_weekDayTextAppearance">@style/Gadis.Calendar.WeekDayText</item>
        <item name="mcv_headerTextAppearance">@style/Gadis.Calendar.HeaderText</item>
    </style>

    <!-- Style for the individual date numbers -->
    <style name="Gadis.Calendar.DateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <!-- Style for the weekday labels (S, M, T, etc.) -->
    <style name="Gadis.Calendar.WeekDayText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
    <!-- Style for the month/year header -->
    <style name="Gadis.Calendar.HeaderText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimary2</item>
    </style>

    <style name="Theme.GadisSalonManagementSystemAPP" parent="Base.Theme.GadisSalonManagementSystemAPP" />
</resources>