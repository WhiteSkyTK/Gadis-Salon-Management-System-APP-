<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GadisSalonManagementSystemAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Style for a Profile Menu Item -->
    <style name="ProfileOption" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Style for a divider line -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/input_field_background</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.GadisSalonManagementSystemAPP" parent="Base.Theme.GadisSalonManagementSystemAPP" />
</resources>