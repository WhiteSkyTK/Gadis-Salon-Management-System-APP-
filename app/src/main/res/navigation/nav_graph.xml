<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"/>
    <action
        android:id="@+id/action_homeFragment_to_productDetailFragment"
        app:destination="@id/productDetailFragment" />

    <fragment
        android:id="@+id/shopFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.shop.ShopFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop"/>
    <action
        android:id="@+id/action_shopFragment_to_productDetailFragment"
        app:destination="@id/productDetailFragment" />

    <fragment
        android:id="@+id/bookingFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.booking.BookingFragment"
        android:label="fragment_booking"
        tools:layout="@layout/fragment_booking" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.ProductDetailFragment"
        android:label="ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail" />

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.favorites.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites"/>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.rst.gadissalonmanagementsystemapp.ui.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart" />
</navigation>